<odoo>
    <record id="complaint_work_order_report_action" model="ir.actions.report">
        <field name="name">Complaint Work Order</field>
        <field name="model">realestatex.complaint</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">bloopark_realestatex_complaints.complaint_work_order_report_document</field>
        <field name="report_file">bloopark_realestatex_complaints.complaint_work_order_report_document</field>
        <field name="print_report_name">'Complaint Work Order - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_realestatex_complaint"/>
        <field name="binding_type">report</field>
    </record>
    <template id="complaint_work_order_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="bloopark_realestatex_complaints.complaint_report_work_order" />
            </t>
        </t>
    </template>
    <template id="complaint_report_work_order">
        <t t-call="web.external_layout">
            <div class="page">
                <!-- Header with standard margins and font sizes -->
                <div>
                    <h2>Work Order</h2>
                    <p><strong>Customer:</strong> <span t-field="o.name"/></p>
                    <p><strong>Address:</strong> <span t-field="o.address"/></p>
                    <p><strong>Date:</strong> <span t-field="o.create_date" t-options='{"format": "d.m.Y"}'/></p>
                    <p><strong>Action Plan: </strong>  <span t-field="o.stage_id.name"/></p>
                </div>
                
                <!-- Body text with standard formatting -->
                <div style="font-size: 12pt; line-height: 1.5;">
                    <p>Dear <span t-field="o.name"/>,</p>
                    <p>Thank you for your complaint. Below are the details of the work order created for you:</p>
                    <ul>
                        <li><strong>Complaint Type:</strong> <span t-field="o.type"/></li>
                        <li><strong>Description:</strong> <span t-field="o.description"/></li>
                    </ul>
                    <p>We will review it and get back to you shortly.</p>
                </div>
                
                <!-- Footer with contact information -->
                <div>
                    <p>Sincerely,</p>
                    <p>Your Company</p>
                </div>
            </div>
        </t>
    </template>
</odoo>
    