<odoo>
    <data>
        <!-- New Category -->
        <record id="module_category_complaint" model="ir.module.category">
            <field name="name">Complaint</field>
            <field name="sequence">10</field>
        </record>

        <!-- Complaint User Group -->
        <record id="group_complaint_user" model="res.groups">
            <field name="name">Complaint User</field>
            <field name="category_id" ref="module_category_complaint"/>
        </record>

        <!-- Complaint Manager Group -->
        <record id="group_complaint_manager" model="res.groups">
            <field name="name">Complaint Manager</field>
            <field name="category_id" ref="module_category_complaint"/>
        </record>

        <!-- Model Access Rules -->
        <record id="complaint_user_access_rule" model="ir.rule">
            <field name="name">Complaint User Access</field>
            <field name="model_id" ref="model_realestatex_complaint"/>
            <field name="groups" eval="[(4, ref('group_complaint_user'))]"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids), 
                ('user_id', 'in', [user.id, False])]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="complaint_manager_access_rule" model="ir.rule">
            <field name="name">Complaint Manager Access</field>
            <field name="model_id" ref="model_realestatex_complaint"/> 
            <field name="groups" eval="[(4, ref('group_complaint_manager'))]"/>
            <field name="domain_force">[('company_id', 'in', user.company_ids.ids)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
