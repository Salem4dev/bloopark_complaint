<odoo>
    <record id="view_complaint_kanban" model="ir.ui.view">
        <field name="name">complaint.kanban</field>
        <field name="model">realestatex.complaint</field>
        <field name="arch" type="xml">
            <kanban class="o_complaint_kanban" sample="1">
                <field name="id"/>
                <field name="stage_id"/>
                <field name="name"/>
                <field name="title"/>
                <field name="type"/>
                <field name="create_date"/>
                <field name="description"/>
                <field name="priority"/>
                <field name="user_id"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_complaint_kanban"
                             t-att-data-id="record.id.raw_value">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <div class="oe_kanban_record_top">
                                        <strong class="o_kanban_record_title">
                                            <t t-esc="record.name.raw_value"/>
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_record_top">
                                        <strong class="o_kanban_record_title">
                                            <t t-esc="record.title.raw_value"/>
                                        </strong>
                                    </div>
                                    <div class="oe_kanban_record_body">
                                        <span class="badge badge-primary">
                                            <t t-esc="record.type.raw_value"/>
                                        </span>
                                        <br/>
                                        <t t-esc="record.stage_id.value"/>
                                        <br/>
                                        <t t-esc="record.description.raw_value" t-options='{"truncate": True, "limit": 100}'/>
                                    </div>
                                    <div class="oe_kanban_record_bottom">
                                        <t t-esc="record.user_id.value"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="view_complaint_tree" model="ir.ui.view">
        <field name="name">complaint.tree</field>
        <field name="model">realestatex.complaint</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" force_save="1"/>
                <field name="title"/>
                <field name="type"/>
                <field name="email"/>
                <field name="address"/>
                <field name="type"/>
                <field name="priority"/>
                <field name="user_id"/>
                <field name="stage_id"/>
            </tree>
        </field>
    </record>

    <record id="view_complaint_form" model="ir.ui.view">
        <field name="name">complaint.form</field>
        <field name="model">realestatex.complaint</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage_id" widget="statusbar" statusbar_visible="all" options="{'clickable': 'true'}"/>  <!-- Make the statusbar clickable -->
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="title" attrs="{'readonly': [('is_readonly', '=', True)]}"/>
                            <field name="type" attrs="{'readonly': [('is_readonly', '=', True)]}"/>
                            <field name="priority" attrs="{'readonly': [('is_readonly', '=', True)]}"/>
                            <field name="email" attrs="{'readonly': [('is_readonly', '=', True)]}"/>
                            <field name="is_readonly" invisible="1"/>
                            </group>
                            <group>
                                <field name="user_id"/>
                                <field name="address" attrs="{'readonly': [('is_readonly', '=', True)]}"/>
                                <field name="company_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description" attrs="{'readonly': [('is_readonly', '=', True)]}"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_complaint" model="ir.actions.act_window">
        <field name="name">Complaints</field>
        <field name="res_model">realestatex.complaint</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'group_by': 'stage_id'}</field>
    </record>

    <menuitem id="menu_complaints_root" name="Complaints"/>
    <menuitem id="menu_complaints" name="Complaints" parent="menu_complaints_root" action="action_complaint"/>
</odoo>
