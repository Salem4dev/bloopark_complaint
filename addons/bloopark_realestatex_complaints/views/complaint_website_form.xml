<odoo>
    <data>
        <template id="complaint_land_page_form" name="Complaint Form">
            <t t-call="website.layout">
                <div id="wrap">
                    <div class="oe_structure">
                        <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1">
                            <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_banner_default_image'); background-position: 50% 0;"/>
                            <div class="o_we_bg_filter bg-black-50"/>
                            <div class="container">
                                <h1>Submit a Complaint</h1>
                            </div>
                        </section>
                        <section class="s_text_block pt40 pb40 o_colored_level " data-snippet="s_text_block">
                            <div class="container">
                                <div id="complaint_form_container">
                                    <form action="/complaint/submit" method="POST">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                        <div class="form-group">
                                            <label for="InputTitle">Title</label>
                                            <input type="text" name="title" required="required" class="form-control" id="InputTitle" placeholder="Enter Name" t-att-value="values.get('title')"/>
                                            <t t-if="errors and errors.get('title')">
                                                <div class="invalid-feedback" style="display:block;"><t t-esc="errors['title']"/></div>
                                            </t>
                                        </div>
                                        <div class="form-group">
                                            <label for="InputEmail1">Email</label>
                                            <input type="email" name="email" required="required" class="form-control" id="InputEmail1" placeholder="Enter email" t-att-value="values.get('email')"/>
                                            <t t-if="errors and errors.get('email')">
                                                <div class="invalid-feedback" style="display:block;"><t t-esc="errors['email']"/></div>
                                            </t>
                                        </div>
                                        <div class="form-group">
                                            <label for="InputAddress">Address</label>
                                            <input type="text" name="address" required="required" class="form-control" id="InputAddress" placeholder="Enter Address" t-att-value="values.get('address')"/>
                                            <t t-if="errors and errors.get('address')">
                                                <div class="invalid-feedback" style="display:block;"><t t-esc="errors['address']"/></div>
                                            </t>
                                        </div>
                                        <div class="form-group">
                                            <label for="InputType">Type</label>
                                            <select name="type" required="required" class="form-control" id="InputType">
                                                <option value="question" t-att-selected="'selected' if values and values.get('type') == 'question' else ''">Question</option>
                                                <option value="electrical" t-att-selected="'selected' if values and values.get('type') == 'electrical' else ''">Electrical Issue</option>
                                                <option value="heating" t-att-selected="'selected' if values and values.get('type') == 'heating' else ''">Heating Issue</option>
                                                <option value="other" t-att-selected="'selected' if values and values.get('type') == 'other' else ''">Other</option>
                                                <option value="" selected="selected">Select Type</option>
                                            </select>
                                            <t t-if="errors and errors.get('type')">
                                                <div class="invalid-feedback" style="display:block;"><t t-esc="errors['type']"/></div>
                                            </t>
                                        </div>
                                        <div class="form-group">
                                            <label for="InputCompany">Company</label>
                                            <select name="company_id" required="required" class="form-control" id="InputCompany">
                                                <t t-foreach="company_ids" t-as="company">
                                                    <option t-att-value="company.id" t-att-selected="'selected' if values and values.get('company_id') == company.id else ''"><t t-esc="company.name"/> </option>
                                                </t>
                                            </select>
                                            <t t-if="errors and errors.get('company_id')">
                                                <div class="invalid-feedback" style="display:block;"><t t-esc="errors['company_id']"/></div>
                                            </t>
                                        </div>
                                        <div class="form-group">
                                            <label for="InputDescription">Description</label>
                                            <textarea type="text" name="description" required="required" class="form-control" id="InputDescription"><t t-esc="values.get('description')"/></textarea>
                                            <t t-if="errors and errors.get('description')">
                                                <div class="invalid-feedback" style="display:block;"><t t-esc="errors['description']"/></div>
                                            </t>
                                        </div>
                                        <br/>
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </form>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </t>
        </template>

        <template id="complaint_success" name="Complaint Success">
            <t t-call="website.layout">
                <div class="container">
                    <h1>Complaint Submitted</h1>
                    <p>Your complaint (ID: <t t-esc="complaint_id"/>) has been recorded.</p>
                </div>
            </t>
        </template>
    </data>
</odoo>
